{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@components": [
        "src/components/index.ts"
      ],
      "@pages": [
        "src/pages/index.ts"
      ],
      "@models": [
        "src/models/index.ts"
      ],
      "@contexts": [
        "src/contexts/index.ts"
      ],
      "@hooks": [
        "src/hooks/index.ts"
      ],
      "@utils": [
        "src/utils/index.ts"
      ],
      "@api": [
        "src/api/index.ts"
      ],
      "@app/types": [
        "src/types/index.ts"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}